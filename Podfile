# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'olx Game' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for olx Game
  pod 'Firebase/Core'
  pod 'Firebase/Auth' #handle authentication facebook, email and password
  pod 'Firebase/Database'
  pod 'Firebase/Storage' #for images
  pod 'FBSDKLoginKit'
  pod 'SwiftKeychainWrapper'

  pod 'Fabric'
  pod 'TwitterKit'
  
  pod 'DTImageScrollView' #for scroll image view for cells to show images
  #https://github.com/daront/DTImageScrollView
  
  pod 'IQKeyboardManagerSwift' #for good keyboard
  
  pod 'TextFieldEffects' #for different textfields
  #https://github.com/raulriera/TextFieldEffects

  target 'olx GameTests' do
    inherit! :search_paths
    # Pods for testing
  end

end
